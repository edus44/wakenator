{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "type": "shell",
  "presentation": {
    "reveal": "always",
    "panel": "dedicated"
  },
  "tasks": [
    {
      "label": "Dev server",
      "type": "npm",
      "script": "dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Tests watch",
      "type": "npm",
      "script": "test-dev",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Tests",
      "type": "npm",
      "script": "test",
      "group": "test"
    },
    {
      "label": "Lint",
      "type": "npm",
      "script": "lint"
    }
  ]
}
